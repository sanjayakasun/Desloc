<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="5"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_columnSpan="2"
            app:cardCornerRadius="20dp"
            android:outlineAmbientShadowColor="@color/dark_ash"
            android:outlineSpotShadowColor="@color/dark_ash"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/dark_ash"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="45dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Looking For"
                    android:textSize="35dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_semibold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What ?"
                    android:textSize="35dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_semibold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See what's waiting for you on your next getaway."
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/gvtimeregular"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_columnSpan="2"
            app:cardCornerRadius="20dp"
            android:outlineAmbientShadowColor="@color/dark_ash"
            android:outlineSpotShadowColor="@color/dark_ash"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/dark_ash"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wht"
                    />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/van"
                    android:layout_marginTop="-185dp"
                    android:layout_marginLeft="40dp"
                    />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/tr"
                    android:layout_marginTop="-120dp"
                    android:layout_marginLeft="110dp"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/lo"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="-20dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:outlineAmbientShadowColor="@color/dark_ash"
            android:outlineSpotShadowColor="@color/dark_ash"
            app:cardBackgroundColor="@color/dark_ash"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <Button
                    android:id="@+id/boarding"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_bg2"
                    android:backgroundTint="@color/yellow_dark"
                    android:drawableBottom="@drawable/baseline_touch_app"
                    android:drawablePadding="-30dp"
                    android:text="Looking For  Boarding / Hostel" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:outlineAmbientShadowColor="@color/dark_ash"
            android:outlineSpotShadowColor="@color/dark_ash"
            app:cardBackgroundColor="@color/dark_ash"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <Button
                    android:id="@+id/travel"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_bg2"
                    android:backgroundTint="@color/yellow_dark"
                    android:drawableBottom="@drawable/baseline_touch_app"
                    android:drawablePadding="-30dp"
                    android:text="Looking For Travelling" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            app:cardCornerRadius="20dp"
            android:outlineAmbientShadowColor="@color/dark_ash"
            android:outlineSpotShadowColor="@color/dark_ash"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/dark_ash"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/srilankalogo"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            app:cardCornerRadius="20dp"
            android:outlineAmbientShadowColor="@color/dark_ash"
            android:outlineSpotShadowColor="@color/dark_ash"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/dark_ash"
            android:layout_marginTop="0dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/logolist"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

</RelativeLayout>