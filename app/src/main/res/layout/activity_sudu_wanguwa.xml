<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_columnSpan="3"
            app:cardCornerRadius="20dp"
            android:outlineAmbientShadowColor="@color/dark_ash"
            android:outlineSpotShadowColor="@color/dark_ash"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/dark_ash"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="55dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sudu Wanguwa"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_semibold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="White Bend"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_semibold"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/suduwanguwa5"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/suduwanguwa4"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/suduwanguwa2"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/suduwanguwa3"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/suduwanguwa"
                    />
            </LinearLayout>
        </HorizontalScrollView>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="380dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_columnSpan="3"
            app:cardCornerRadius="20dp"
            android:outlineAmbientShadowColor="@color/dark_ash"
            android:outlineSpotShadowColor="@color/dark_ash"
            android:layout_margin="5dp"
            android:layout_marginTop="-30dp"
            app:cardBackgroundColor="@color/dark_ash"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="55dp"
                >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Better to travel with a Bike"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_semibold"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Time schedule from Bus"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_semibold"
                    />
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="344dp"
                    android:layout_row="5"
                    android:layout_column="3">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Time            "
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:fontFamily="@font/poppins_semibold"/>
                        <TextView
                            android:text="From"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:fontFamily="@font/poppins_semibold"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="2.20 p.m "
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:fontFamily="@font/poppins_semibold"/>
                        <TextView
                            android:text="Badulla Bus Station"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:fontFamily="@font/poppins_semibold"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                        <TextView
                            android:text="5.20 p.m "
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:fontFamily="@font/poppins_semibold"/>
                        <TextView
                            android:text="Badulla Bus Station"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:fontFamily="@font/poppins_semibold"/>
                    </TableRow>
                </TableLayout>
                <Button
                    android:id="@+id/suduwanguwa_go"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="@drawable/input_bg"
                    android:backgroundTint="@color/yellow_dark"
                    android:text="GO"
                    android:layout_marginTop="-250dp"
                    />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="344dp"
                    android:layout_row="5"
                    android:layout_column="3">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="80dp">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/sltour"
                            android:layout_marginRight="10dp"
                            />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/srilankalogo"
                            android:layout_marginLeft="10dp"
                            />
                    </TableRow>
                </TableLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</RelativeLayout>