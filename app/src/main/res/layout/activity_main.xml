<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="5"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_columnSpan="3"
            app:cardCornerRadius="20dp"
            android:outlineAmbientShadowColor="@color/dark_ash"
            android:outlineSpotShadowColor="@color/dark_ash"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/dark_ash"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome Travelers"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_semibold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See what's waiting for you on your next getaway."
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_semibold"
                    />
                <EditText
                    android:id="@+id/destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:ems="10"
                    android:hint="Type Your Destination"
                    android:textAlignment="center"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textColorLink="@color/white"
                    />
                <Button
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="@drawable/input_bg"
                    android:backgroundTint="@color/white"
                    android:text="go"
                    android:layout_marginTop="5dp"
                    />
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/trl"
                    android:layout_gravity="center"
                    android:layout_marginTop="-80dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0"
            android:layout_row="1"
            android:layout_column="0"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/nuwara1"
                    android:layout_marginTop="10dp"
                    />
                <Button
                    android:id="@+id/nuwaraeliya"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="@drawable/input_bg"
                    android:backgroundTint="@color/yellow_dark"
                    android:text="Nuwaraeliya"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0"
            android:layout_row="1"
            android:layout_column="1"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ninearch"
                    android:layout_marginTop="10dp"
                    />
                <Button
                    android:id="@+id/ninearch"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="@drawable/input_bg"
                    android:backgroundTint="@color/yellow_dark"
                    android:text="Nine Arch"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0"
            android:layout_row="2"
            android:layout_column="0"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/adisam4"
                    android:layout_marginTop="10dp"
                    />
                <Button
                    android:id="@+id/adisam"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="@drawable/input_bg"
                    android:backgroundTint="@color/yellow_dark"
                    android:text="adisham"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0"
            android:layout_row="2"
            android:layout_column="1"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/boburuella4"
                    android:layout_marginTop="10dp"
                    />
                <Button
                    android:id="@+id/boburuella"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="@drawable/input_bg"
                    android:backgroundTint="@color/yellow_dark"
                    android:text="Bomburu ella"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0"
            android:layout_row="3"
            android:layout_column="0"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/dunhida1"
                    android:layout_marginTop="10dp"
                    />
                <Button
                    android:id="@+id/dunhida"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="@drawable/input_bg"
                    android:backgroundTint="@color/yellow_dark"
                    android:text="dunhida ella"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0"
            android:layout_row="3"
            android:layout_column="1"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/suduwanguwa5"
                    android:layout_marginTop="10dp"
                    />
                <Button
                    android:id="@+id/suduwanguwa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:backgroundTint="@color/yellow_dark"
                    android:text="sudu wanguwa       (white bend)"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </GridLayout>

    </RelativeLayout>